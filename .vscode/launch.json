	"version": "0.2.0",
	"configurations": [
		{
            "name": "(gdb) Launch",
            "type": "cppdbg",
			"preLaunchTask": "build",
            "request": "launch",
            "program": "C:\\usr\\homeworks\\tsp\\build\\main.exe",
            "args": ["AAC"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
            // "preLaunchTask": "C/C++: g++ build active file",
        }
	]
}